@model IEnumerable<FlightClientApp.Models.FlightDto>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<div class="container py-4">
    <a class="btn btn-link" asp-action="Index">← Back</a>
    <h2 class="mb-3">Results</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <strong>Помилка:</strong> @ViewBag.Error
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">No flights found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Flight</th>
                        <th>Departure</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Duration (min)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var f in Model)
                    {
                        <tr>
                            <td>@f.FlightNumber</td>
                            <td>@f.DepartureDateTime.ToString("u")</td>
                            <td>@f.DepartureAirportCity</td>
                            <td>@f.ArrivalAirportCity</td>
                            <td>@f.DurationMinutes</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
