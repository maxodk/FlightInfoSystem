@{
    ViewData["Title"] = "Flight Search";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<div class="container py-4">
    <h1 class="mb-4">Flight Search</h1>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card p-3">
                <h5>By Flight Number</h5>
                <form asp-action="ByNumber" method="post" class="row gy-2">
                    <div class="col-8">
                        <input name="flightNumber" class="form-control" placeholder="PS101" required />
                    </div>
                    <div class="col-4"><button class="btn btn-primary w-100">Search</button></div>
                </form>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card p-3">
                <h5>By Date</h5>
                <form asp-action="ByDate" method="post" class="row gy-2">
                    <div class="col-8">
                        <input name="date" type="date" class="form-control" required />
                    </div>
                    <div class="col-4"><button class="btn btn-primary w-100">Search</button></div>
                </form>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card p-3">
                <h5>By Departure City + Date</h5>
                <form asp-action="ByDeparture" method="post" class="row gy-2">
                    <div class="col-5"><input name="city" class="form-control" placeholder="Kyiv" required /></div>
                    <div class="col-5"><input name="date" type="date" class="form-control" required /></div>
                    <div class="col-2"><button class="btn btn-primary w-100">Go</button></div>
                </form>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card p-3">
                <h5>By Arrival City + Date</h5>
                <form asp-action="ByArrival" method="post" class="row gy-2">
                    <div class="col-5"><input name="city" class="form-control" placeholder="Warsaw" required /></div>
                    <div class="col-5"><input name="date" type="date" class="form-control" required /></div>
                    <div class="col-2"><button class="btn btn-primary w-100">Go</button></div>
                </form>
            </div>
        </div>
    </div>
</div>
